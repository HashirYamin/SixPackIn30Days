<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="@dimen/_70sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:backgroundTint="#EDF3F2"
    app:cardCornerRadius="@dimen/_10sdp"
    android:id="@+id/card_day">

    <RelativeLayout
        android:id="@+id/day_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day1"
            android:fontFamily="@font/outfitbold"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginLeft="@dimen/_18sdp"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/no_of_exercises"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No of exercises"
            android:fontFamily="@font/outfitmedium"
            android:layout_marginTop="@dimen/_34sdp"
            android:layout_marginLeft="@dimen/_18sdp"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@+id/no_of_exercises"
            />



        <ImageView
            android:id="@+id/check"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/bg_checked"
            android:src="@drawable/round_check_24"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_250sdp"
            android:adjustViewBounds="true" />
        <Button
            android:id="@+id/start_btn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_37sdp"
            android:text="Start"
            android:fontFamily="@font/outfitbold"
            android:textColor="@color/blue_light"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/custom_button_2"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/_20sdp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
