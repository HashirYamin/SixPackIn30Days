<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer pink stroke -->
    <item>
        <layer-list>
            <!-- Outer pink stroke -->
            <item>
                <shape>
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="@dimen/_4sdp" android:color="#FF3C8A"/>
                    <corners android:radius="@dimen/_14sdp"/>
                </shape>
            </item>
            <!-- Inner white stroke -->
            <item android:left="@dimen/_2sdp" android:right="@dimen/_2sdp" android:top="@dimen/_2sdp" android:bottom="@dimen/_2sdp">
                <shape>
                    <solid android:color="#FF4F96"/>
                    <stroke android:width="@dimen/_2sdp" android:color="#FFFFFF"/>
                    <corners android:radius="@dimen/_14sdp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
