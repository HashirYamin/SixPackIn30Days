<!-- res/drawable/toggle_inactive.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@android:color/transparent" /> <!-- Transparent background when inactive -->
    <stroke
        android:width="2dp"
        android:color="@color/blue" /> <!-- Outline color and thickness -->
    <corners android:radius="20dp" /> <!-- Rounded corners -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
